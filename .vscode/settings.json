{
    "postman.settings.dotenv-detection-notification-visibility": false,
    "files.associations": {
        "*.css": "tailwindcss",
        "*.scss": "tailwindcss"
    },

    // Tell Tailwind-CSS IntelliSense which attributes hold class lists
    "tailwindCSS.classAttributes": [
        "class", // default HTML
        "className", // React
        "extendedClassName" // your custom prop
    ],

    "markdownlint.config": { "list-marker-space": false },

    "explorer.sortOrder": "type",
    "explorer.sortOrderReverse": true,

    "editor.linkedEditing": true
}
